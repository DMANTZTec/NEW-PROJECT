<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:paddingTop="10dp"

    tools:context=".CartClient">

    <RelativeLayout
        android:id="@+id/cardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cart_product_image"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:src="@drawable/denim_shirt" />

                <TextView
                    android:id="@+id/cart_product_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/cart_product_image"
                    android:text="Denim Shirt"

                    />

                <TextView
                    android:id="@+id/qty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cart_product_text"
                    android:layout_marginLeft="150dp"

                    android:text="QTY : "
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qty_text"
                    android:layout_toRightOf="@id/cart_product_image"
                    android:paddingLeft="50dp"
                    android:text="RS 799"
                    android:textSize="20sp" />

                <Spinner

                    android:id="@+id/qty_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cart_product_text"
                    android:layout_toRightOf="@id/qty_text">


                </Spinner>
            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardLayout"
        android:layout_marginTop="400dp"
        android:text="PROCEED TO PAYMENT" />


</RelativeLayout>
